<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_kelinci"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rabbit House"
        android:textSize="36dp"
        android:layout_marginTop="50dp"
        android:id="@+id/tv_activity_main_first_activity"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_height="200dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/kelinci_1"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_activity_main_pindah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Check Now"
        android:onClick="Pindah"
        />

</LinearLayout>